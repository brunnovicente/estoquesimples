<div class="col-md-5 mx-auto shadow p-3">

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <h3 class="navbar-brand">Editar Produtos</h3>

            <ul class="nav">
                <li class="nav-item">
                    <a class="btn btn-sm btn-secondary" href="/produto" ><i class="fa-solid fa-angle-left"></i> Voltar</a>
                </li>
            </ul>
        </div>
    </nav>

<form method="post" action="/produto/salvar">
    <fieldset>

        <legend>Dados do Produto</legend>

        <div class="mb-3 col-3">
            <label for="id" class="form-label">CÓDIGO</label>
            <input type="number" value="{{produto.id}}" name="id" id="id" class="form-control" readonly>
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">DESCRIÇÃO</label>
            <input type="text" value="{{produto.descricao}}" name="descricao" id="descricao" class="form-control" required>
        </div>

        <div class="row">
            <div class="col mb-3">
                <label for="preco" class="form-label">PREÇO</label>
                <input value="{{produto.preco}}" type="text" id="preco" name="preco" class="form-control" required>
            </div>
            <div class="col mb-3">
                <label for="estoque"  class="form-label">ESTOQUE</label>
                <input value="{{produto.estoque}}" type="text" id="estoque" name="estoque" class="form-control" required>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>

    </fieldset>
</form>
</div>